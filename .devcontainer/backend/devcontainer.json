{
  "name": "Backend Container",
  "dockerComposeFile": ["../../docker-compose.yml"],
  "service": "backend",
  "shutdownAction": "none",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
        "extensions":[
          "ms-python.python",
          "njpwerner.autodocstring",
          "oderwat.indent-rainbow",
          "usernamehw.errorlens",
          "shardulm94.trailing-spaces",
          "ms-python.isort",
          "ms-python.black-formatter",
          "ms-python.flake8",
          "ms-python.mypy-type-checker"
        ],
        "settings": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "ms-python.black-formatter",
          "[python]": {
            "python.defaultInterpreterPath": "${workspaceFolder}/backend/src/.venv/bin/python",
            "python.formatting.blackArgs": [
              "skip-string-normalization",
              "--line-length=120"
            ],
            "mypy-type-checker.path": ["${workspaceFolder}/backend/src/.venv/bin/mypy"],
            "mypy-type-checker.args": ["--config=${workspaceFolder}/backend/pyproject.toml"]
          },
          "python.analysis.extraPaths": [
            "${workspaceFolder}/backend",
            "${workspaceFolder}/backend/.venv/lib/python3.12/site-packages"
          ],
          "pylint.args": [
            "--load-plugins",
            "pylint_django",
            "--django-settings-module",
            "config.settings.development"
          ]
        }
    },
    "features": {
      "ghcr.io/devcontainers/features/aws-cli:1": {},
      "ghcr.io/devcontainers/features/git:1": {}
    }
  }
}
